<h1> Welcome to the jungle </h1>
<div class="row">
	<div class="col-sm-12 col-md-6 col-md-offset-3">
		<form id="rental-form">
			<div class="form-group">
				<label class="control-label rental-type">Rental Type
					<div class="btn-group">
						<input id="apartment" class="rental-radio" type="radio" name="rental[rental_type]" value="apartment">
						<label for="apartment" class="btn btn-primary r-selector rental first-button">
						   <i class="fa fa-building-o fa-2x"></i>
						   <span3>APT</span3>
						</label>

						<input id="home" class="rental-radio" type="radio" name="rental[rental_type]" value="home">
						<label for="home" class="btn btn-primary r-selector rental">
							<i class="fa fa-home fa-2x"></i>
							<span3>Home</span>
						</label>

						<input id="bnb" class="rental-radio" type="radio" name="rental[rental_type]" value="bnb">
						<label for="bnb" class="btn btn-primary r-selector rental">
							<i class="fa fa-coffee fa-2x"></i>
							<span3>BnB</span>
						</label>
					</div>
				</label>
			</div>

			<div class="form-group">
				<label class="control-label rental-type">Room Type
					<div class="btn-group">
						<input id="whole-home" class="rental-radio" type="radio" name="rental[room_type]" value="whole-home">
						<label for="whole-home" class="btn btn-primary r-selector room first-button">
						   <i class="fa fa-home fa-2x"></i>
						   <span3>Whole Home</span3>
						</label>

						<input id="private-room" class="rental-radio" type="radio" name="rental[room_type]" value="private-room">
						<label for="private-room" class="btn btn-primary r-selector room">
							<i class="fa fa-key fa-2x"></i>
							<span3>Private Room</span>
						</label>

						<input id="shared-room" class="rental-radio" type="radio" name="rental[room_type]" value="shared-room">
						<label for="shared-room" class="btn btn-primary r-selector room">
							<i class="fa fa-suitcase fa-2x"></i>
							<span3>Shared Room</span>
						</label>
					</div>
				</label>
			</div>


			<div class="form-group">
				<label class="control-label">Apt or Unit
					<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-home" style="top: 0px"></span>
						<input type="text" class="form-control rental-form" name="rental[unit]">
					</div>
				</label>
			</div>

			<div class="form-group">
				<label class="control-label">Street Address
					<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-road" style="top: 0px"></span>
						<input type="text" class="form-control rental-form" id="address" name="rental[address]">
					</div>
				</label>
			</div>

			<div class="form-group">
				<label class="control-label">Allowed Guests
					<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-user" style="top: 0px"></span>
						<input type="text" class="form-control rental-form" name="rental[allowed_guests]">
					</div>
				</label>
			</div>

			<div class="form-group">
				<label class="control-label">Tag Line
					<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-tag" style="top: 0px"></span>
						<input type="text" class="form-control rental-form" name="rental[tagline]">
					</div>
				</label>
			</div>

			<div class="form-group">
				<label class="control-label">Price
					<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-usd" style="top: 0px"></span>
						<input type="text" class="form-control rental-form" name="rental[price]">
					</div>
				</label>
			</div>

			<div class="form-group">
				<label id="description" class="control-label">Description
					<textarea class="form-control rental-form" name=rental[description]></textarea>
				</label>
			</div>


			<button class="btn btn-primary">Submit</button>
		</form>
	</div>
<div>