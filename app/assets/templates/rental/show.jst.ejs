<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-11">
		<h3> <%= rental.escape("tagline") %> </h3>
	</div>
</div>

<div class="row" id="rental-show-row">
	<div class="col-md-8">
		<div id="show-rental-carousel" class="carousel slide" data-ride="carousel">

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner" id="show-rental-carousel-inner">
				<% var i = 0; %>
				<% images.forEach(function(image) { %>
					<div class="item <%= i === 0 ? "active" : "" %>">
						<img src="<%= image.escape("photo_url") %>">
					</div>
					<% i++ %>
				<% }) %>
		  </div>

		  <a class="left carousel-control" href="#show-rental-carousel" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left"></span>
		  </a>
		  <a class="right carousel-control" href="#show-rental-carousel" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right"></span>
		  </a>
		</div>
	</div>

	<div class="col-md-3" id="booking-form">
		<div class="errors"></div>
		<h4> <%= rental.escape("price") %> Per Night! </h4>

		<div class="form-group">
			<form id="show-rental-form" class="form-inline">
				<div class="row">
					<div class="col-xs-9">
						<div class="col-xs-6">
							<label for="show-rental-start-date">Check In</label>
							<input
										type="text"
										id="show-rental-start-date"
										class="form-control date"
										name="rental_request[start_date]"
										value=""
							>
						</div>

						<div class="col-xs-6">
							<label for="show-rental-end-date">Check Out</label>
							<input
										type="text"
										id="show-rental-end-date"
										class="form-control
										date"
										name="rental_request[end_date]"
										value=""
							>
						</div>
					</div>

					<div class="col-xs-3">
						<div class="form-group">
							<label class="control-label">Guests
								<div class="input-group">
									<select class="form-control rental-form" name="rental_request[guests]">
										<% for(var i = 1; i < 15; i++){ %>
											<option value="<%= i %>"><%= i %></option>
										<% } %>
										<option value="15">15+</option>
									</select>

								</div>
							</label>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12">
						<div class="col-xs-12">
							<label for="rental-message" id="message-label">Message</label>
							<textarea
										type="text"
										id="rental-message"
										class="form-control
										date"
										name="message[content]"
										value=""
							></textarea>
						</div>
					</div>
				</div>


				<button id="book-rental" class="btn btn-primary">Book!</button>
			</form>
		</div>
	</div>
	<div class="col-md-8">
		<div id="rental-details">
			<h6><%= rental.escape("address") %></h6>
			<h6><%= rental.escape("description") %></h6>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-1"></div>

</div>