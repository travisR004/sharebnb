<h3> Listing: <%= rental.escape("id") %> </h3>
<div class="row">
	<div class="col-md-8">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
		    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
		    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner">
		    <div class="item active">
		      <img src="https://a0.muscache.com/airbnb/static/landing_pages/home_v2/hero/488485-cb8055504a43a9fd3687392c58abe04b.jpg">
		    </div>

				<div class="item">
					<img src="https://a0.muscache.com/airbnb/static/landing_pages/home_v2/hero/264248-25b69a424e9d6033cd7b417cf8ad4deb.jpg">
				</div>
		  </div>

		  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left"></span>
		  </a>
		  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right"></span>
		  </a>
		</div>
	</div>

	<div class="col-md-4" id="booking-form">
		<h3> Book your Stay! </h3>
		<h4> <%= rental.escape("price") %> Per Night! </h4>

		<div class="form-group">
			<form id="show-rental-form" class="form-inline">
				<div class="row">
					<div class="col-xs-9">
						<div class="col-xs-6">
							<label for="show-rental-start-date">Check In</label>
							<input
										type="text"
										id="show-rental-start-date"
										class="form-control date"
										name="rental_request[start_date]"
										value=""
							>
						</div>

						<div class="col-xs-6">
							<label for="show-rental-end-date">Check Out</label>
							<input
										type="text"
										id="show-rental-end-date"
										class="form-control
										date"
										name="rental_request[end_date]"
										value=""
							>
						</div>
					</div>

					<div class="col-xs-3">
						<div class="form-group">
							<label class="control-label">Guests
								<div class="input-group">
									<select class="form-control rental-form" name="rental_request[guests]">
										<% for(var i = 1; i < 15; i++){ %>
											<option value="<%= i %>"><%= i %></option>
										<% } %>
										<option value="15">15+</option>
									</select>

								</div>
							</label>
						</div>
					</div>
				</div>

				<button id="book-rental" class="btn btn-primary">Book!</button>
			</form>
		</div>
	</div>
</div>

<div class="col-md-8">
	<div id="rental-details">
		<p><%= rental.escape("address") %></p>
		<p><%= rental.escape("description") %></p>
	</div>
</div>