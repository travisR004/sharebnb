<!DOCTYPE html>
<html lang="en">
  <head>
	  <title>Sharebnb</title>
	     <meta name="viewport" content="width=device-width, initial-scale=1.0">
	     <%= stylesheet_link_tag    "application", media: "all" %>
	     <%= javascript_include_tag "application" %>
			 <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	     <%= csrf_meta_tags %>
  </head>
  <body data-spy="scroll" data-target=".navbar-example">

    <div class="navbar navbar-default" role="navigation">
      <div class="navbar-inner">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-target="#sharebnb-collapse" data-toggle="collapse">
						<span class="sr-only"> Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Sharebnb</a>
				</div>

          <div class="collapse navbar-collapse" id="sharebnb-collapse">
            <ul class="nav navbar-nav">
							<% if logged_in? %>
              	<li><a href="#" class="account" >Account</a></li>
              	<li><a href="#" class="sign-out">Sign Out</a></li>
							<% else %>
								<li data-toggle="modal" data-target="#login-modal"><a href="#" class="sign-in">Sign In</a></li>
								<li data-toggle="modal" data-target="#signup-modal"><a href="#" class="sign-up">Sign Up</a></li>
							<% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span1"></div>
        <div class="span10">
          <%= yield %>
        </div>
        <div class="span1"></div>
      </div>

			<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	      <div class="modal-dialog">
	        <div class="modal-content">
	          <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	            <h4 class="modal-title" id="myModalLabel">Log In</h4>
	          </div>
	          <div class="modal-body">
	            <%= render 'sessions/login_form' %>
	          </div>
	        </div>
	      </div>
	    </div>

			<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	      <div class="modal-dialog">
	        <div class="modal-content">
	          <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	            <h4 class="modal-title" id="myModalLabel">Log In</h4>
	          </div>
	          <div class="modal-body">
	            <%= render 'users/form' %>
	          </div>
	        </div>
	      </div>
	    </div>
		</div>

	<script>
		$("#sign-in").click( function(event){
			event.preventDefault();
			var data = $(event.currentTarget).parent().parent().serializeJSON()
			$.ajax({
				url: 'sessions',
				type: "POST",
				data: data
			})
		})
	</script>

	<script>
		$("#sign-up").click( function(event){
			event.preventDefault();
			var data = $(event.currentTarget).parent().parent().serializeJSON()
			$.ajax({
				url: 'users',
				type: "POST",
				data: data
			})
		})
	</script

  </body>
</html>
